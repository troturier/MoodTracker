<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thibault_roturier.moodtracker.Activities.A_MoodTracker">

    <RelativeLayout
        android:id="@+id/backgroundMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_sage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageSwitcher
            android:id="@+id/imageSwitcherMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

        </ImageSwitcher>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/base_RelativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/noteAdd_Ib"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/history_Ib"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/noteAddButton"
            android:onClick="commentInput"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_note_add_black" />

        <ImageButton
            android:id="@+id/history_Ib"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="33dp"
            android:layout_marginEnd="32dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/historyButton"
            android:onClick="showHistory"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_history_black" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
